datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int    @default(autoincrement()) @id
  email String @unique
  name  String
  posts Post[]
}

model Post {
  id       Int    @default(autoincrement()) @id
  title    String
  text     String
  author   User   @relation(fields: [authorId], references: [id])
  authorId Int
}
